{
  "version": 2,
  "name": "movieflix-pro",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/sitemap.xml",
      "dest": "/sitemap.xml"
    },
    {
      "src": "/robots.txt",
      "dest": "/robots.txt"
    },
    {
      "src": "/favicon.ico",
      "dest": "/favicon.ico"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "env": {
    "NEXT_PUBLIC_SITE_URL": "https://movieflix-pro.vercel.app",
    "NEXT_PUBLIC_SITE_NAME": "Movieflix Pro"
  },
  "build": {
    "env": {
      "NEXT_PUBLIC_SITE_URL": "https://movieflix-pro.vercel.app",
      "NEXT_PUBLIC_SITE_NAME": "Movieflix Pro"
    }
  },
  "crons": [
    {
      "path": "/api/cron/sitemap",
      "schedule": "0 0 * * *"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}